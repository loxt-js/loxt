{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"test": {
			"dependsOn": ["build"],
			"inputs": ["src/**/*.ts", "test/**/*.ts"]
		},
		"lint": {
			"outputs": []
		},
		"deploy": {
			"dependsOn": ["build"]
		},
		"dev": {
			"cache": false
		}
	}
}
